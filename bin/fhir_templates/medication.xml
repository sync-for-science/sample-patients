{%- extends "entry.xml" %}
{%- block content %}
<MedicationRequest>
  {{resource_id}}
  <text>
    <status value="generated"/>
    <div xmlns="http://www.w3.org/1999/xhtml">
      {{m.name}} (rxnorm: {{m.rxn}})
    </div>
  </text>

  <status value="{{m.status}}" />
  <patient>
    <reference value="{{base_url}}{{pid}}"/>
  </patient>

  <medicationCodeableConcept>
    <coding>
        <system value="http://www.nlm.nih.gov/research/umls/rxnorm"/>
        <code value="{{m.rxn}}"/>
        <display value="{{m.name}}"/>
    </coding>
    <text value="{{m.name}}"/>
  </medicationCodeableConcept>

  <dosageInstruction>
    <timing>
      {%- if m.freqduration %}
      <repeat>
        <boundsPeriod>
          <start value="{{m.start}}"/>
          {%- if m.end is defined and m.end != "" %}
          <end value="{{m.end}}"/>
          {% endif %}
        </boundsPeriod>
        <frequency value="{{m.freq}}"/>
        <period value="1"/>
        <periodUnits value="{{m.freqduration}}"/>
      </repeat>
      {% endif %}
    </timing>
    {%- if m.qtt %}
    <doseQuantity>
      <value value="{{m.qtt}}"/>
      <unit value="{{m.qttunit}}"/>
      <system value="http://unitsofmeasure.org"/>
      <code value="{{m.qttunit}}"/>
    </doseQuantity>
    {% endif %}
    {%- if "prn" in m.sig %}
    <asNeededBoolean value="true"/>
    {% endif %}
    <text value="{{m.sig}}"/>
  </dosageInstruction>
  {%- if m.refills or m.q or m.days %}
  <dispenseRequest>
     {%- if m.refills %}
     <numberOfRepeatsAllowed value="{{m.refills}}"/>
     {% endif %}
     {%- if m.q %}
     <quantity>
        <value value="{{m.q}}"/>
        <unit value="{{m.qttunit}}"/>
        <system value="http://unitsofmeasure.org"/>
        <code value="{{m.qttunit}}"/>
     </quantity>
     {% endif %}
     {%- if m.days %}
     <expectedSupplyDuration>
        <value value="{{m.days}}"/>
        <unit value="days"/>
        <system value="http://unitsofmeasure.org"/>
        <code value="d"/>
     </expectedSupplyDuration>
     {% endif %}
  </dispenseRequest>
  {% endif %}
</MedicationRequest>
{% endblock %}
